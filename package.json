{
  "name": "min-kit",
  "version": "0.3.1",
  "private": true,
  "description": "Toolkit of miniapp based on Tarojs/React",
  "author": "rexerwang",
  "license": "MIT",
  "repository": "rexerwang/min-kit",
  "scripts": {
    "build": "pnpm -r --sort --filter=./packages/* run build",
    "dev": "pnpm build --dev",
    "dev:template": "pnpm --dir=miniapp/template run dev:weapp",
    "lint:tsc": "pnpm -r exec tsc --noEmit",
    "lint:eslint": "eslint --fix --ext .ts,tsx ./",
    "lint:style": "stylelint --fix \"{miniapp,packages}/**/*.{scss,css}\"",
    "format": "prettier --write .",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,mjs,cjs,json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.10.0",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.3",
    "@types/react": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-taro": "3.6.20",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "minimist": "^1.2.8",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "react": "^18.0.0",
    "stylelint": "^15.11.0",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "stylelint-prettier": "^4.1.0",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0"
  }
}
